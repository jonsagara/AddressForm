@model AddressForm.MvcWeb.Models.PersonEditorModel
@{
    Layout = null;
}

@Scripts.Render("~/bundles/jqueryvaladdressform")

<script type="text/javascript">
    addressForm.resources.regionLabelUS = "@AddressFormResources.RegionLabelUS";
    addressForm.resources.localityLabelUS = "@AddressFormResources.LocalityLabelUS";
    addressForm.resources.postalCodeLabelUS = "@AddressFormResources.PostalCodeLabelUS";
    addressForm.resources.regionLabelCA = "@AddressFormResources.RegionLabelCA";
    addressForm.resources.localityLabelCA = "@AddressFormResources.LocalityLabelCA";
    addressForm.resources.postalCodeLabelCA = "@AddressFormResources.PostalCodeLabelCA";
    addressForm.resources.localityLabelOther = "@AddressFormResources.LocalityLabelOther";
    addressForm.resources.postalCodeLabelOther = "@AddressFormResources.PostalCodeLabelOther";
    addressForm.resources.localityRequiredErrorMessageUS = "@AddressFormResources.LocalityRequiredErrorMessageUS";
    addressForm.resources.localityRequiredErrorMessageCA = "@AddressFormResources.LocalityRequiredErrorMessageCA";
    addressForm.resources.localityRequiredErrorMessageOther = "@AddressFormResources.LocalityRequiredErrorMessageOther";
    addressForm.resources.postalCodeRequiredErrorMessageUS = "@AddressFormResources.PostalCodeRequiredErrorMessageUS";
    addressForm.resources.postalCodeRequiredErrorMessageCA = "@AddressFormResources.PostalCodeRequiredErrorMessageCA";

    $(function () {
        addressForm.init({
            initialCountry: "@Model.Country",
            initialRegion: "@Model.RegionDropDownList",
            regionsByCountry: $.parseJSON(@Html.Raw(Json.Encode(Model.RegionsByCountryJson)))
        });
    });
</script>